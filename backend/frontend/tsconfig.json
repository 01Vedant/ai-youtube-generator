{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/components/**/*",
    "src/pages/LibraryPage.tsx",
    "src/pages/RenderStatusPage.tsx",
    "src/components/ArtifactCard.tsx",
    "src/lib/**/*",
    "src/types/**/*",
    "vite-env.d.ts"
  ]
}
