# DevotionalAI Platform - Environment Configuration
# Copy this to .env and fill in your actual values

# ============================================================
# SERVER CONFIGURATION
# ============================================================
DEBUG=True
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://devotionalai.example.com

# ============================================================
# DATABASE
# ============================================================
# Local SQLite (development)
DATABASE_URL=sqlite:///./devotionalai.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/devotionalai
# PostgreSQL on AWS RDS
# DATABASE_URL=postgresql://user:password@devotionalai-db.xxxxx.us-east-1.rds.amazonaws.com:5432/devotionalai

# ============================================================
# SECURITY
# ============================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# ============================================================
# JOB QUEUE (Redis)
# ============================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# Cloud Redis (example)
# CELERY_BROKER_URL=redis://:password@redis-instance.xxxxx.cache.amazonaws.com:6379/0

# ============================================================
# STORAGE
# ============================================================

# Option 1: Local Filesystem (development)
USE_S3=False
LOCAL_STORAGE_PATH=./storage

# Option 2: AWS S3 (production)
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=devotionalai-videos
AWS_REGION=us-east-1

# ============================================================
# EXTERNAL APIs
# ============================================================

# OpenAI (DALL-E 3 image generation)
OPENAI_API_KEY=sk-...

# ElevenLabs (Natural TTS audio)
ELEVENLABS_API_KEY=sk-...

# Runway AI (Optional - video generation)
RUNWAY_API_KEY=...

# ============================================================
# TEXT-TO-SPEECH SETTINGS
# ============================================================
DEFAULT_TTS_VOICE=aria  # aria, sagara, daya
DEFAULT_TTS_ENGINE=elevenlabs  # elevenlabs or pyttsx3

# ============================================================
# VIDEO RENDERING
# ============================================================
DEFAULT_VIDEO_RESOLUTION=4k  # 720p, 1080p, 4k
DEFAULT_VIDEO_FPS=24
DEFAULT_VIDEO_BITRATE=20M

# Preview settings (faster rendering)
PREVIEW_VIDEO_FPS=24
PREVIEW_VIDEO_BITRATE=5M

# ============================================================
# IMAGE GENERATION
# ============================================================
DEFAULT_IMAGE_ENGINE=openai  # openai, sdxl, runway, local
IMAGE_GENERATION_TIMEOUT=300  # 5 minutes
IMAGE_QUALITY=4k  # preview or final (4k)

# ============================================================
# PROCESSING LIMITS
# ============================================================
MAX_PROJECT_SIZE_GB=100.0
MAX_VIDEO_DURATION_MINUTES=60
MAX_CONCURRENT_JOBS_PER_USER=3
JOB_TIMEOUT_MINUTES=120  # 2 hours for 4K video

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
