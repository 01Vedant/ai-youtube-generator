# Bhakti Video Generator Environment Variables
# Copy this to .env and fill in your values

# ============================================================
# API Server Configuration
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=INFO
ENVIRONMENT=development

# ============================================================
# Image Generation (Optional)
# ============================================================
# Leave blank to use PIL placeholder (free, no API key needed)
# Set to enable DALLÂ·E 3 image generation
OPENAI_API_KEY=

# ============================================================
# Text-to-Speech Generation (Optional)
# ============================================================
# Leave blank to use pyttsx3 fallback (local, free)
# Set to enable ElevenLabs premium voices
ELEVENLABS_API_KEY=

# ============================================================
# YouTube Integration (Optional)
# ============================================================
# Set to 1 to enable; 0 or unset to disable
ENABLE_YOUTUBE_UPLOAD=0
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_SECRET=

# ============================================================
# Cloud Storage (Optional S3)
# ============================================================
# Set to true to enable S3 uploads; false for local storage
USE_S3=false
S3_BUCKET=
S3_KEY=
S3_SECRET=
S3_ENDPOINT=  # For S3-compatible services (Minio, DigitalOcean Spaces, etc.)

# ============================================================
# Frontend Configuration
# ============================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_PLACEHOLDER_MODE=true  # Set to false to require real API keys

# ============================================================
# Database (Future: PostgreSQL)
# ============================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/bhakti

# ============================================================
# Job Queue (Future: Celery + Redis)
# ============================================================
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================
# Monitoring (Optional: Prometheus)
# ============================================================
# ENABLE_PROMETHEUS=true
# PROMETHEUS_SCRAPE_INTERVAL=15s

# ============================================================
# Development Settings
# ============================================================
DEBUG=true
RELOAD_ON_CHANGE=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ============================================================
# Creator Mode: Templates, Library, Scheduling
# ============================================================
ENABLE_TEMPLATES=true
ENABLE_LIBRARY=true
ENABLE_SCHEDULING=true
ENABLE_DUAL_SUBTITLES=true
ENABLE_THUMBNAIL=true
SCHEDULE_TZ=UTC

# ============================================================
# Rate Limiting & Guardrails
# ============================================================
RATE_LIMIT_PER_MIN=10
MAX_SCENES=20
MAX_SCENE_DURATION_SEC=20
MAX_TOTAL_DURATION_SEC=600
MAX_JOB_COST=50.0

# ============================================================
# API Authentication
# ============================================================
API_KEY_ADMIN=
API_KEY_CREATOR=

# ============================================================
# Observability: Sentry, Prometheus, Logging
# ============================================================
SENTRY_DSN=
SENTRY_ENV=development
JSON_LOGS=true
LOG_LEVEL=INFO

# ============================================================
# Queue & Redis (for Celery workers)
# ============================================================
REDIS_URL=
ENABLE_CELERY=false

# ============================================================
# YouTube Publishing (Creator Mode)
# ============================================================
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# ============================================================
# Frontend Observability
# ============================================================
VITE_SENTRY_DSN=
